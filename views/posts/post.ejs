<% var currentPage = "posts" %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,user-scalable=no,initial-scale=1,maximum-scale=1,minimum-scale=1">
  <title><%- post.title || "博客" %></title>
  <link rel="stylesheet" href="/stylesheets/atom-one-dark.css">
  <link rel="stylesheet" href="/stylesheets/github-markdown.css">
  <script src="/javascripts/highlight.pack.js" charset="utf-8"></script>
  <% include ../partials/common-js.ejs %>
  <% if ( env != "development" ) { %>
    <link rel="stylesheet" href="/dist/post.<%- hash %>.css">
  <% } %>
</head>
<body>
  <div class="container">
    <div class="base-info">
      <div class="post-item-title"><%- post.title || "没有标题" %></div>
      <div class="post-item-base-info"> <%- post.created %> / <%- author.name %> </div>
    </div>
    <div class="markdown-body">
    <%- html %>
    </div>
    <div class="post-bottom-info">
      <a href="mailto:<%- author.email %>" class="post-item-email">Mail to: <%- author.email %></a>
    </div>
  </div>
</body>
  <script>hljs.initHighlightingOnLoad();</script>
<% if ( env == "development" ) { %>
  <script src="/dist/post.js"></script>
<% } else { %>
  <script src="/dist/post.<%- hash %>.js"></script>
<% } %>
